<Window x:Class="Vasuthalozat.UserFooldal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vasuthalozat"
        mc:Ignorable="d"
        Title="UserFooldal" Height="438" Width="800">
    <Grid Margin="0,0,0,15">
        <Button Content="Adatok beolvasása" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="59" Width="142" Click="btn_beolvasas"/>
        <ComboBox HorizontalAlignment="Left" Margin="18,118,0,0" VerticalAlignment="Top" Width="120" x:Name="kiindulo"/>
        <ComboBox HorizontalAlignment="Left" Margin="21,0,0,0" VerticalAlignment="Center" Width="120" x:Name="cel"/>
        <Label Content="Kiinduló város:" HorizontalAlignment="Left" Margin="18,87,0,0" VerticalAlignment="Top"/>
        <Label Content="Cél város:" HorizontalAlignment="Left" Margin="20,162,0,0" VerticalAlignment="Top"/>

        <DataGrid d:ItemsSource="{d:SampleData ItemCount=0}" Margin="182,10,10,10"/>
        <Button Content="Mentés" HorizontalAlignment="Left" Margin="18,237,0,0" VerticalAlignment="Top" Height="59" Width="142" Click="btn_mentes"/>

    </Grid>
</Window>
